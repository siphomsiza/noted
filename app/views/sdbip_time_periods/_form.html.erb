  <div class="col-lg-6 col-md-offset-3">
    <%= form_for @sdbip_time_period do |f| %>
  <%= f.label :period %><br>
		<%= f.select(:period,["Quarter 1","Quarter 2", "Quarter 3", "Quarter 4"],{},{:class=>"form-control"}) %>

	<%= f.label :start_date %><br>
  <div class="form-group">
    <div class="input-group date" data-provide="datepicker"
         data-date-format="M-yyyy" data-date-start-view="days" data-date-min-view-mode="days">
      <%= f.text_field :start_date, class: "form-control" %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>
  <%= f.label :end_date %><br>

  <div class="form-group">
    <div class="input-group date" data-provide="datepicker"
         data-date-format="M-yyyy" data-date-start-view="days" data-date-min-view-mode="days">
      <%= f.text_field :end_date, class: "form-control" %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>

  <div class="actions col-lg-3 pull-right">
    <%= f.submit "Save", :class =>'btn btn-mini' %>
  </div>
  <% end %>
</div>
