<%= form_for @sdbip_time_period do |f| %>
  	<%= f.label :departmental_sdbip_id,"Departmental SDBIP:" %>
	<%= f.select(:departmental_sdbip_id, DepartmentalSdbip.all.collect {|x| [x.project_name, x.id]}, {},{:class=>"form-control"})%>



		<%= f.label :period %><br>
		<%= f.select(:period,["Quarter 1","Quarter 2", "Quarter 3", "Quarter 4", "Overall Performance"],{},{:class=>"form-control"}) %>

		<%= f.label :status %><br>
		<%= f.select(:status,["Open","Closed"],{},{:class=>"form-control"}) %>

	<%= f.label :start_date %><br>
	<%= f.date_select(:start_date,{},{:class=>"form-control"}) %>

	<%= f.label :end_date %><br>
	<%= f.date_select(:end_date, {} ,{:class=>"form-control"}) %>

	<%= link_to "Back", sdbip_time_periods_path, class: 'btn btn-mini' %>&nbsp;<%= f.submit class: 'btn btn-mini'%>
  <% end %>
