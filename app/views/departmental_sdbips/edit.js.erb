$(function(){
  $(document).on('change','#selected_department_update', function(){
     var select_value = $( "#selected_department_update option:selected" ).text();
     $('#current_department_update').val(select_value);
     
  });
  $(document).on('change','#selected_subdepartment_update', function(){
     var select_value = $( "#selected_subdepartment_update option:selected" ).text();
     $('#current_subdepartment_update').val(select_value);

  });
});

$("#departmental-sdbip-modal").html("<%= j(render 'edit') %>")
$("#departmental-sdbip-modal").modal("show")
$(document).ready(function(){
    $('input[type="submit"]').click(function(){
        $("#departmental-sdbip-modal").modal("hide")
    });
});
