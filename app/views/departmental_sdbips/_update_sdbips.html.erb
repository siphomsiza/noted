        <th class="kpiowner"><h4>KPI Owner</h4></th>
        <th class="unit_of_measurement"><h4>Unit of Measurement</h4></th>
        <th class="source_of_evidence"><h4>Source of Evidence</h4></th>
        <th class="ndp_objectives"><h4>NDP Objective</h4></th>
        <th class="capital-project"><h4>Capital Project</h4></th>
        <th class="reporting_category"><h4>Reporting Category</h4></th>
        <th class="kpi_calculation_type"><h4>KPI Calculation Type</h4></th>

        <th class="first_quarter_target"><h4>Target</h4></th>
        <th class="first_quarter_target"><h4>Actual</h4></th>
        <th class="first_quarter_target"><h4>Results</h4></th>

        <th class="second_quarter_target"><h4>Target</h4></th>
        <th class="second_quarter_target"><h4>Actual</h4></th>
        <th class="second_quarter_target"><h4>Results</h4></th>

        <th class="third_quarter_target"><h4>Target</h4></th>
        <th class="third_quarter_target"><h4>Actual</h4></th>
        <th class="third_quarter_target"><h4>Results</h4></th>

        <th class="fourth_quarter_target"><h4>Target</h4></th>
        <th class="fourth_quarter_target"><h4>Actual</h4></th>
        <th class="fourth_quarter_target"><h4>Results</h4></th>

        <th class="annual_target"><h4>Annual Target</h4></th>
        <th class="revised_target"><h4>Revised Target</h4></th>
        <th class="annual_target"><h4>Actual</h4></th>
        <th class="revised_target"><h4>Results</h4></th>

        <th class="kpi_type"><h4>KPI Type</h4></th>
        <th class="kpi_target_type"><h4>KPI Target Type</h4></th>
        <th class="idp_ref"><h4>IDP Ref</h4></th>
        <th class="mscore_classification"><h4>M Score Classification</h4></th>
        <th class="national_outcome"><h4>National Outcome</h4></th>
        <th class="strategic_objectives"><h4>Strategic Objective</h4></th>
        <th class="baseline"><h4>Baseline</h4></th>
        <th class="budget"><h4>Budget</h4></th>
        <th class="performance_standard"><h4>Performance Standard</h4></th>
        <th class="risk_rating"><h4>Risk Rating</h4></th>
        <th class="kpa"><h4>KPA</h4></th>
        <th class="kpi_concept"><h4>KPI Concept</h4></th>
        <th class="impact"><h4>Impact</h4></th>
        <th class="provincial_strategic_outcome"><h4>Provincial Strategic Outcome</h4></th>
