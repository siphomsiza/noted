<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover display" id="deleted-kpi-table">
        <tr>
            <th>Department</th>
            <th>Subdepartment</th>
            <th>KPI</th>
            <th>KPI Ref Number</th>
            <th>Predetermined Objectives</th>
            <th>KPI Owner</th>
            <th>Unit of Measurement</th>
            <th>Source of Evidence</th>
            <th>NDP Objective</th>
            <th>Capital Project</th>
            <th>Reporting Category</th>
            <th>KPI Calculation Type</th>
            <th>Action</th>

        </tr>
        <% deleted_kpis.each do |deleted_kpi| %>
        <tr>
            <td><%= deleted_kpi.department.name %></td>
            <td><%= deleted_kpi.subdepartment.name %></td>
            <td><%= deleted_kpi.kpi %></td>
            <td><%= deleted_kpi.kpi_ref_number %></td>
            <td><% if !deleted_kpi.predetermined_objective_id.blank? %><%= deleted_kpi.predetermined_objective.name %><% end %></td>
            <td><% if !deleted_kpi.kpi_owner_id.blank? %><%= deleted_kpi.kpi_owner.name %><% end %></td>
            <td><%= deleted_kpi.unit_of_measurement %></td>
            <td><%= deleted_kpi.source_of_evidence %></td>
            <td><% if !deleted_kpi.ndp_objective_id.blank? %><%= deleted_kpi.ndp_objective.name %><% end %></td>
            <td></td>
            <td><% if !deleted_kpi.reporting_category_id.blank? %><%= deleted_kpi.reporting_category.name %><% end %></td>
            <td><% if !deleted_kpi.kpi_calculation_type_id.blank? %><%= deleted_kpi.kpi_calculation_type.name %><% end %></td>
            <td><%= link_to "Restore KPI", restore_kpi_path(deleted_kpi), :class=>'btn btn-sm'%></td>

        </tr>
        <% end %>

    </table>
</div>
