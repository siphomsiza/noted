<table class="table table-responsive table-striped">
  <tr>
    <th>Ref:</th><td>D<%= @departmental_sdbip.id %></td>
  </tr>
  <tr>
    <th>Department</th><td><%= @departmental_sdbip.department.name %></td>
  </tr>
  <tr>
    <th>KPI</th><td><%= @departmental_sdbip.kpi %></td>
  </tr>
  <tr>
    <th>Unit of Measrement</th><td><%= @departmental_sdbip.unit_of_measurement %></td>
  </tr>
  <tr>
    <th>Source of Evidence</th><td><%= @departmental_sdbip.source_of_evidence %>
      <% @departmental_sdbip.kpi_results.each do |result| %>
        <% result.attachments.each do |attachment| %>
        <li><%= link_to attachment.poe,attachment.poe_url, target: '_blank' %></li>
        <% end %>
      <% end %>
    </td>
  </tr>
  <tr>
    <th>KPI Calculation Type</th><td><%= @departmental_sdbip.kpi_calculation_type.name %></td>
  </tr>
</table>
