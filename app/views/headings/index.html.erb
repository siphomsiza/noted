<% provide(:title, 'Headings') %>
<script>
	$(function () {
		//highlight the current nav
		$("#applicationmanifest  ul.navbar-nav li:eq(2)").addClass('active');
	}); //jQuery is loaded
</script>

<div class="row">
	<div class="col col-lg-12">
