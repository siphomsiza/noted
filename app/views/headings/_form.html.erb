<div class="row"> <br/>
  <%= form_for @heading do |f| %>
    <div class="col-lg-6 col-md-offset-3">
      <%= f.label :term %><br>
      <%= f.text_field :term, :class => "form-control has-error col-md-5" %>

      <%= f.label :description %><br>
      <%= f.text_area :description, :class => "form-control has-error col-md-5" %>

      <%= f.label :category %><br>
      <%= f.select(:category,["Capital Projects", "Departmental SDBIP","General","Monthly Cashflows", "Revenue by source","Top Layer SDBIP"],{},{:class=>"form-control"})%>

      <%= f.submit class: 'btn  btn-midi pull-right'%><br/>

    <% end %>
  </div>
</div>
