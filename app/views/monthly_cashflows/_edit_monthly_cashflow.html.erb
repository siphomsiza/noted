<table class="table table-striped table-bordered">
<thead>
  <tr>
    <th>Vote number</th>
    <th>Department</th>
    <th>Subdepartment</th>
    <th>Mscore classification</th>
    <th>Line item</th>
    <th>Month</th>
    <th>Operational Expenditure</th>
    <th>Revenue</th>
    <th>Capital Expenditure</th>

  </tr>
</thead>

<tbody>
  <% @monthly_cashflows.each do |monthly_cashflow| %>
    <tr>
      <td>
        <%= link_to edit_monthly_cashflow_path(monthly_cashflow),remote: true,'data-target' => "#monthly-cashflow-modal", 'data-toggle' => 'modal', :title=>"Click to Update KPI" do %>
            <%= monthly_cashflow.vote_number %>
          <% end %>
          <div id="monthly-cashflow-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">

          </div>
      </td>
      <td><%= monthly_cashflow.department.name %></td>
      <td><%= monthly_cashflow.subdepartment.subdepartment_name %></td>
      <td><%= monthly_cashflow.mscore_classification.name %></td>
      <td><%= monthly_cashflow.line_item %></td>
      <td><%= monthly_cashflow.month %></td>
      <td><%= monthly_cashflow.operational_expenditure %></td>
      <td><%= monthly_cashflow.revenue %></td>
      <td><%= monthly_cashflow.capital_expenditure %></td>


    </tr>
  <% end %>
</tbody>
</table>
