<div class="row">
    <div class="col-lg-6 col-md-offset-3">

<%= form_for(@monthly_cashflow) do |f| %>
  <div class="field">
    <%= f.label :month %><br>
  <%= select_month(Date.today,{field_name: 'month',required: true},{class:'form-control'}) %>
  </div>
  <div class="field">
    <%= f.label :vote_number %><br>
    <%= f.text_field :vote_number,{class:'form-control'} %>
  </div>
  <div class="field">
    <%= f.label :department_id %><br>
    <%= f.select :department_id,options_for_select(Department.all.collect{ |u| [u.name, u.id] }),{},{class: "form-control"} %>
  </div>
  <div class="field">
    <%= f.label :subdepartment_id %><br>
    <%= f.select :subdepartment_id,Subdepartment.all.collect{ |u| [u.subdepartment_name, u.id] },{},{class: "form-control"} %>
  </div>

  <div class="field">
    <%= f.label :mscore_classification_id %><br>
    <%= f.select :mscore_classification_id,MscoreClassification.all.collect{ |u| [u.name, u.id] },{},{class: "form-control"}  %>
  </div>
  <div class="field">
    <%= f.label :line_item %><br>
    <%= f.text_area :line_item,{class:'form-control'} %>
  </div>
  <div class="field">
    <%= f.label :operational_expenditure %><br>
    <%= f.text_field :operational_expenditure,{class:'form-control'} %>
  </div>
  <div class="field">
    <%= f.label :revenue %><br>
    <%= f.text_field :revenue,{class:'form-control'} %>
  </div>
  <div class="field">
    <%= f.label :capital_expenditure %><br>
    <%= f.text_field :capital_expenditure,{class:'form-control'} %>
  </div>
  <div class="actions">
    <%= f.submit "Save",{class:'btn btn-midi btn-primary'} %>
  </div>

<% end %>
</div></div>
