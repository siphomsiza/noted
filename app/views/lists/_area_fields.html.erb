<div class="row">
  <div class="col-lg-12">
    <fieldset>

      <%= f.label :name, "Area" %><br>
      <%= f.text_field :name, :class => "form-control",:autocomplete=>"off" %>
      <br/>
      <%= f.fields_for :wards do |ward_for_form| %>
        <%= render 'ward_fields', f: ward_for_form %>
      <% end %>
      <%= link_to_add_fields "Add Ward", f, :wards %>
      <%= f.hidden_field :_destroy %>
      <%= link_to "Remove Area", '#', class: "btn remove_fields" %>
      <br/>
    </fieldset>
  </div>
</div>
