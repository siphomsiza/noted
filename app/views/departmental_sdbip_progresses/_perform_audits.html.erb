<div id="perform-audit" class="tab-pane active fade in">
  <h3>Assurance</h3>
  <hr/>
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
        <tr>
          <th><h4>Ref</h4></th>
          <th><h4>Department</h4></th>
          <th><h4>Subdepartment</h4></th>
          <th><h4>KPI</h4></th>
          <th><h4>KPI Ref Number</h4></th>
          <th><h4>Predetermined Objectives</h4></th>
          <th><h4>KPI Owner</h4></th>
          <th><h4>Unit of Measurement</h4></th>
          <th><h4>Source of Evidence</h4></th>
          <th><h4>NDP Objective</h4></th>
          <th><h4>Capital Project</h4></th>
          <th><h4>Reporting Category</h4></th>
          <th><h4>KPI Calculation Type</h4></th>
        </tr>
      <% @departmental_sdbips.each do |departmental_sdbip| %>
        <tr>
          <td><%= departmental_sdbip.id %></td>
          <td><%= departmental_sdbip.department.name %></td>
          <td><%= departmental_sdbip.subdepartment.subdepartment_name %></td>
          <td>
          <%= link_to audit_performance_path(departmental_sdbip),remote: true,'data-target' => "#audit-sdbip-modal", 'data-toggle' => 'modal', :title=>"Click to Update" do %>
              <%= departmental_sdbip.kpi %>
            <% end %>
            <div id="audit-sdbip-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">

            </div>
          </td>
          <td><%= departmental_sdbip.kpi_ref_number %></td>
          <td><% if !departmental_sdbip.predetermined_objective_id.blank? %><%= departmental_sdbip.predetermined_objective.name %><% end %></td>
          <td ><% if !departmental_sdbip.kpi_owner_id.blank? %><%= departmental_sdbip.kpi_owner.name %><% end %></td>
          <td><%= departmental_sdbip.unit_of_measurement %></td>
          <td><%= departmental_sdbip.source_of_evidence %></td>
          <td><% if !departmental_sdbip.ndp_objective_id.blank? %><%= departmental_sdbip.ndp_objective.name %><% end %></td>
          <td><% if departmental_sdbip.capital_project %><%= departmental_sdbip.capital_project.mun_cp_ref %><% end %></td>
          <td><% if !departmental_sdbip.reporting_category_id.blank? %><%= departmental_sdbip.reporting_category.name %><% end %></td>
          <td><% if !departmental_sdbip.kpi_calculation_type_id.blank? %><%= departmental_sdbip.kpi_calculation_type.name %><% end %></td>
        </tr>
        <% end %>

    </table>
  </div>

</div>
