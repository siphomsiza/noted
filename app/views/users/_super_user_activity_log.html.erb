<div class="tab-pane fade" id="super_user_activity_log">
<div class="table-responsive table-bordered">
  <table class="table">
    <thead>
      <tr>
        <th>Avatar</th>
        <th>Ref</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Date</th>

        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @super_user_activities.each do |super_user_activity| %>

      <tr>
        <th></th>
        <th><%= super_user_activity.id %></th>
        <th><% if !super_user_activity.user_id.blank? %><%= super_user_activity.user.firstname %><% end %></th>
        <th><% if !super_user_activity.user_id.blank? %><%= super_user_activity.user.surname %><% end %></th>
        <th><% if !super_user_activity.user_id.blank? %><%= super_user_activity.user.email %><% end %></th>
        <th><% if !super_user_activity.user_id.blank? %><%= super_user_activity.created_at %><% end %></th>

        <th><% if !super_user_activity.user_id.blank? %><%= super_user_activity.note %><% end %></th>
      </tr>
      <% end %>
    </tbody>
    </table>
      <%= will_paginate @super_user_activities %>
</div>
</div>
