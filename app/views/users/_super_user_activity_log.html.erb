<div class="tab-pane fade" id="super_user_activity_log">
<div class="table-responsive table-bordered">
  <table class="table display" id="super-user-activity-logs">
    <thead>
      <tr>
        <th>Avatar</th>
        <th>Ref</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Date</th>

        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% super_user_activities.each do |super_user_activity| %>

      <tr>
        <td><%= image_tag(super_user_activity.user.avatar.url(:thumb), size: 50) %></td>
        <td><%= super_user_activity.id %></td>
        <td><% if !super_user_activity.user_id.blank? %><%= super_user_activity.user.firstname %><% end %></td>
        <td><% if !super_user_activity.user_id.blank? %><%= super_user_activity.user.surname %><% end %></td>
        <td><% if !super_user_activity.user_id.blank? %><%= super_user_activity.user.email %><% end %></td>
        <td><% if !super_user_activity.user_id.blank? %><%= super_user_activity.created_at.strftime("%Y %b %d %H-%M-%S") %><% end %></td>

        <td><% if !super_user_activity.user_id.blank? %><%= super_user_activity.note %><% end %></td>
      </tr>
      <% end %>
    </tbody>
    </table>
</div>
</div>
