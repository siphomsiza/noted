<div class="tab-pane" id="locked_users">
<div class="table-responsive table-bordered">
  <table class="table">
    <thead>
      <tr>
        <th>Avatar</th>
        <th>Ref</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Date Added</th>
        <th>Last Login</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% locked_users.each do |locked_user| %>
      <tr>
        <td><%= image_tag(locked_user.avatar.url(:thumb), size: 50) %></td>
        <td><%= locked_user.id %></td>
        <td><%= locked_user.firstname %></td>
        <td><%= locked_user.surname %></td>
        <td><%= locked_user.email %></td>
        <td><%= locked_user.created_at.strftime("%Y %b %d  %H:%M:%S") %></td>
        <td><% if !locked_user.last_login.blank? %><%= locked_user.last_login.strftime("%Y %b %d %H:%M:%S") %><% end %></td>
        <td><% if !current_user?(locked_user) %>
          <%= link_to unlock_user_path(:id => locked_user.id),:data =>{confirm: "Unlock #{locked_user.firstname} #{locked_user.surname}'s account'?"}, :class => "btn btn-sm", :title=>"Click to Edit user details" do %>
          <span class="glyphicon glyphicon-edit"></span>&nbsp;Unlock User
          <% end %>
        <% end %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div> <!-- table-responsive -->
</div>
