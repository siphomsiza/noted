<div class="tab-pane fade" id="users_details_log">
<div class="table-responsive table-bordered">
  <table class="table">
    <thead>
      <tr>
        <th><h5>Avatar</h5></th>
        <th><h5>Ref</h5></th>
        <th><h5>First Name</h5></th>
        <th><h5>Last Name</h5></th>
        <th><h5>Username</h5></th>
        <th><h5>Status</h5></th>
        <th><h5>Date Added</h5></th>
        <th><h5>Last Login</h5></th>
        <th><h5>Last Login IP</h5></th>
        <th><h5>Login Count</h5></th>
        <th><h5>Login Attempt</h5></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= gravatar_for user, size: 50 %></td>
        <td><%= user.id %></td>
        <td><%= user.firstname %></td>
        <td><%= user.surname %></td>
        <td><%= user.email %></td>
        <td><%= user.status%></td>
        <td><%= user.created_at.strftime("%Y %b %d") %></td>
        <td><% if !user.last_login.blank? %><%= user.last_login.strftime("%Y %b %d") %><% end %></td>
        <td><%= user.last_login_ip%></td>
        <td><%= user.login_count %></td>
        <td><%= user.login_attempts%></td>
      </tr>
      <% end %>
    </tbody>
    </table>
    <%= will_paginate @users %>
</div>
</div>
