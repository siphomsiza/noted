<div class="tab-pane fade" id="users_activity_log">
<div class="table-responsive table-bordered">
  <table class="table">
    <thead>
      <tr>
        <th>Avatar</th>
        <th>Ref</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Username</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @user_activities.each do |user_activity| %>

      <tr>
        <th></th>
        <th><% if !user_activity.user_id.blank? %><%= user_activity.id %><% end %></th>
        <th><% if !user_activity.user_id.blank? %><%= user_activity.user.firstname %><% end %></th>
        <th><% if !user_activity.user_id.blank? %><%= user_activity.user.surname %><% end %></th>
        <th><% if !user_activity.user_id.blank? %><%= user_activity.user.email %><% end %></th>
        <th><% if !user_activity.user_id.blank? %><%= user_activity.created_at %><% end %></th>

        <th><% if !user_activity.user_id.blank? %><%= user_activity.note %><% end %></th>
      </tr>
      <% end %>
    </tbody>
    </table>
      <%= will_paginate @user_activities %>
</div>
</div>
