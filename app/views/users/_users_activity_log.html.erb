<div class="tab-pane fade" id="users_activity_log">
<div class="table-responsive table-bordered">
  <table class="table">
    <thead>
      <tr>
        <th><h4>Avatar</h4></th>
        <th><h4>Ref</h4></th>
        <th><h4>First Name</h4></th>
        <th><h4>Last Name</h4></th>
        <th><h4>Username</h4></th>
        <th><h4>Date</h4></th>
        <th><h4>Actions</h4></th>
      </tr>
    </thead>
    <tbody>
      <% @user_activities.each do |user_activity| %>

      <tr>
        <td></td>
        <td><% if !user_activity.user_id.blank? %><%= user_activity.id %><% end %></td>
        <td><% if !user_activity.user_id.blank? %><%= user_activity.user.firstname %><% end %></td>
        <td><% if !user_activity.user_id.blank? %><%= user_activity.user.surname %><% end %></td>
        <td><% if !user_activity.user_id.blank? %><%= user_activity.user.email %><% end %></td>
        <td><% if !user_activity.user_id.blank? %><%= user_activity.created_at.strftime("%Y %b %d %H-%M-%S") %><% end %></td>

        <td><% if !user_activity.user_id.blank? %><%= user_activity.note %><% end %></td>
      </tr>
      <% end %>
    </tbody>
    </table>
      <%= will_paginate @user_activities %>
</div>
</div>
