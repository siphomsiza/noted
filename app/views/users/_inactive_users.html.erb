<div class="tab-pane" id="inactive_users">
<div class="table-responsive table-bordered">
  <table class="table">
    <thead>
      <tr>
        <th><h4>Avatar</h4></th>
        <th><h4>Ref</h4></th>
        <th><h4>First Name</h4></th>
        <th><h4>Last Name</h4></th>
        <th><h4>Email</h4></th>
        <th><h4>Status</h4></th>
        <th><h4>Date Added</h4></th>
      </tr>
    </thead>
    <tbody>
    <% @inactive_users.each do |inactive_user| %>
      <tr>
        <td><%= gravatar_for inactive_user, size: 50 %></td>
        <td><%= inactive_user.id %></td>
        <td><%= inactive_user.firstname %></td>
        <td><%= inactive_user.surname %></td>
        <td><%= inactive_user.email %></td>
        <td><span class="label label-danger"><% if !inactive_user.activated? %><%= "Deactivated(#{inactive_user.status})" %><% else %><%= inactive_user.status %><% end %></span></td>
        <td><%= inactive_user.created_at.strftime("%Y %b %d") %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div> <!-- table-responsive -->
</div>
