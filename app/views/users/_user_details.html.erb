<div class="tab-pane active fade in" id="user_details">
  <div class="table-responsive col-lg-9">
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th >Avatar</th>
        <th >Ref</th>
        <th >Title</th>
        <th >First Name</th>
        <th >Last Name</th>
        <th >Job Tile</th>
        <th >Department</th>
        <th >Location</th>
        <th >Manager</th>
        <th >Employee Number</th>
        <th >Employee Date</th>
        <th >Country Prefix</th>
        <th >landline</th>
        <th >Mobile</th>
        <th >Fax</th>
        <th >Email</th>
        <th >Gender</th>
        <th >Race</th>
        <th >Disabled</th>
        <th >Date Added</th>
        <th >Last Login</th>
        <th >Date Terminated</th>
        <th >Login Count</th>
        <th >Status</th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= gravatar_for user, size: 50 %></td>
        <td><%= user.id %></td>
        <td><%= user.title %></td>
        <td><%= user.firstname %></td>
        <td><%= user.surname %></td>
        <td><%= user.job_title %></td>
        <td><%= user.department %></td>
        <td><%= user.location %></td>
        <td><%= user.manager %></td>
        <td><%= user.employee_number %></td>
        <td><% if !user.employment_date.blank? %><%= user.employment_date.strftime("%Y %b %d") %><% end %></td>
        <td><%= user.country_prefix %></td>
        <td><%= user.landline %></td>
        <td><%= user.mobile %></td>
        <td><%= user.fax %></td>
        <td><%= user.email %></td>
        <td><%= user.gender %></td>
        <td><%= user.race %></td>
        <td><%= user.disabled %></td>
        <td><%= user.created_at.strftime("%Y %b %d") %></td>
        <td><% if !user.last_login.blank? %><%= user.last_login.strftime("%Y %b %d") %><% end %></td>
        <td><% if !user.terminated_at.blank? %><%= user.terminated_at.strftime("%Y %b %d") %><% end %></td>
        <td><%= user.login_count %></td>
        <td><%= user.status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @users %>
</div>
</div>
