<div class="tab-pane active fade in" id="user_details">
  <div class="row col col-lg-12">
  <div class="table-responsive col-lg-7">
  <table class="table table-striped table-condensed table-hover">
    <thead>
      <tr>
        <th >Avatar</th>
        <th >ID</th>
        <th >Title</th>
        <th >First Name</th>
        <th >Last Name</th>
        <th >Birth Date</th>
        <th >ID Number</th>
        <th >Username</th>
        <th >Job Title</th>
        <th >Department</th>
        <th >Location</th>
        <th >Manager</th>
        <th >Employee Number</th>
        <th >Employment Date</th>
        <th >Country Prefix</th>
        <th >Landline</th>
        <th >Mobile</th>
        <th >Fax</th>
        <th >Email</th>
        <th >Gender</th>
        <th >Race</th>
        <th >Disabled?</th>
        <th >Date Added</th>
        <th >Last Login</th>
        <th >Number of Login(s)</th>
        <th >Status</th>
      </tr>
    </thead>
    <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag(user.avatar.url(:thumb), size: 50) %></td>
        <td><%= user.id %></td>
        <td><%= user.title %></td>
        <td><%= user.firstname %></td>
        <td><%= user.surname %></td>
        <td><%= user.birth_date %></td>
        <td><%= user.id_number %></td>
        <td><%= user.username %></td>
        <td><%= user.job_title %></td>
        <td><%= user.department %></td>
        <td><%= user.location %></td>
        <td><%= user.manager %></td>
        <td><%= user.employee_number %></td>
        <td><% if !user.employment_date.blank? %><%= user.employment_date.strftime("%Y %b %d") %><% end %></td>
        <td><%= user.country_prefix %></td>
        <td><%= user.landline %></td>
        <td><%= user.mobile %></td>
        <td><%= user.fax %></td>
        <td><%= user.email %></td>
        <td><%= user.gender %></td>
        <td><%= user.race %></td>
        <td><% if user.disabled? %> Yes <% else %>No<% end %></td>
        <td><%= user.created_at.strftime("%Y %b %d %H:%M:%S") %></td>
        <td><% if !user.last_login.blank? %><%= user.last_login.strftime("%Y %b %d %H:%M:%S") %><% end %></td>
        <td><%= user.login_count %></td>
        <td><%= user.status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
<div class="row">
  <div class="col col-lg-12">
      <%= will_paginate %>
  </div>
</div>

</div>
