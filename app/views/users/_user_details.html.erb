<div class="tab-pane active fade in" id="user_details">
  <div class="table-responsive col-lg-9">
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th ><h4>Avatar</h4></th>
        <th ><h4>Ref</h4></th>
        <th ><h4>Title</h4></th>
        <th ><h4>First Name</h4></th>
        <th ><h4>Last Name</h4></th>
        <th ><h4>Job Tile</h4></th>
        <th ><h4>Department</h4></th>
        <th ><h4>Location</h4></th>
        <th ><h4>Manager</h4></th>
        <th ><h4>Employee Number</h4></th>
        <th ><h4>Employee Date</h4></th>
        <th ><h4>Country Prefix</h4></th>
        <th ><h4>Landline</h4></th>
        <th ><h4>Mobile</h4></th>
        <th ><h4>Fax</h4></th>
        <th ><h4>Email</h4></th>
        <th ><h4>Gender</h4></th>
        <th ><h4>Race</h4></th>
        <th ><h4>Disabled</h4></th>
        <th ><h4>Date Added</h4></th>
        <th ><h4>Last Login</h4></th>
        <th ><h4>Date Terminated</h4></th>
        <th ><h4>Login Count</h4></th>
        <th ><h4>Status</h4></th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= gravatar_for user, size: 50 %></td>
        <td><%= user.id %></td>
        <td><%= user.title %></td>
        <td><%= user.firstname %></td>
        <td><%= user.surname %></td>
        <td><%= user.job_title %></td>
        <td><%= user.department %></td>
        <td><%= user.location %></td>
        <td><%= user.manager %></td>
        <td><%= user.employee_number %></td>
        <td><% if !user.employment_date.blank? %><%= user.employment_date.strftime("%Y %b %d") %><% end %></td>
        <td><%= user.country_prefix %></td>
        <td><%= user.landline %></td>
        <td><%= user.mobile %></td>
        <td><%= user.fax %></td>
        <td><%= user.email %></td>
        <td><%= user.gender %></td>
        <td><%= user.race %></td>
        <td><%= user.disabled %></td>
        <td><%= user.created_at.strftime("%Y %b %d") %></td>
        <td><% if !user.last_login.blank? %><%= user.last_login.strftime("%Y %b %d") %><% end %></td>
        <td><% if !user.terminated_at.blank? %><%= user.terminated_at.strftime("%Y %b %d") %><% end %></td>
        <td><%= user.login_count %></td>
        <td><%= user.status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @users %>
</div>
</div>
