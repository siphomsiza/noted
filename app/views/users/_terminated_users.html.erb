<div class="tab-pane fade" id="terminated_users">
<div class="table-responsive table-bordered">
  <table class="table">
    <thead>
      <tr>
        <th><h5>Avatar</h5></th>
        <th><h5>Ref</h5></th>
        <th><h5>First Name</h5></th>
        <th><h5>Last Name</h5></th>
        <th><h5>Username</h5></th>
        <th><h5>Date Added</h5></th>
        <th><h5>Date Terminated</h5></th>
        <th><h5>Actions</h5></th>
      </tr>
    </thead>
    <tbody>
     <% @terminated_users.each do |terminated_user| %>
      <tr>
        <td><%= gravatar_for terminated_user, size: 50 %></td>
        <td><%= terminated_user.id %></td>
        <td><%= terminated_user.firstname %></td>
        <td><%= terminated_user.surname %></td>
        <td><%= terminated_user.email %></td>
        <td><%= terminated_user.created_at.strftime("%Y %b %d")  %></td>
        <td><%= terminated_user.terminated_at.strftime("%Y %b %d")  %></td>
        <td>
        <%= link_to controller: "users", action: "restore", id: terminated_user.id, method: "get",class:"btn btn-default btn-sm" do %>
          <span class="glyphicon glyphicon-refresh"></span>Restore
        <% end %></td>
            </tr>
          <% end %>
    </tbody>
  </table>
</div> <!-- table-responsive -->
</div>
