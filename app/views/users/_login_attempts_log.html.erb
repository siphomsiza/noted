<div class="tab-pane" id="login_attempts_log">
<div class="table-responsive table-bordered">
  <table class="table">
    <thead>
      <tr>
        <th><h4>Avatar</h4></th>
        <th><h4>Ref</h4></th>
        <th><h4>First Name</h4></th>
        <th><h4>Last Name</h4></th>
        <th><h4>Email</h4></th>
        <th><h4>Date Added</h4></th>
        <th><h4>Log in Attempts</h4></th>
        <th><h4>Successful Log in Count</h4></th>
      </tr>
    </thead>
    <tbody>
     <% @user_login_attempts.each do |user_login_attempt| %>
      <tr>
        <td><%= gravatar_for user_login_attempt, size: 50 %></td>
        <td><%= user_login_attempt.id %></td>
        <td><%= user_login_attempt.firstname %></td>
        <td><%= user_login_attempt.surname %></td>
        <td><%= user_login_attempt.email %></td>
        <td><%= user_login_attempt.created_at.strftime("%Y %b %d") %></td>
        <td><%= user_login_attempt.login_attempts %></td>
          <td><%= user_login_attempt.login_count %></td>
            </tr>
          <% end %>
    </tbody>
  </table>
</div> <!-- table-responsive -->
</div>
