<header class="clearfix">
	<section id="branding">
		<%= link_to image_tag("ks-horizontal.jpg", alt: "Keystone Municipal Performance Management System logo") %>
	</section><!-- branding -->

	<section class="navbar">
		<ul class="nav navbar-nav navbar-left">
        <li class="<%= active_class(introduction_path) %>">
          <%= link_to introduction_path do %>
            <span class="glyphicon glyphicon-home"></span>INTRODUCTION
          <% end %>
        </li>
				<% if current_user.admin? || (!current_user.role.blank? && (current_user.role.municipal_manager? || current_user.role.internal_auditor? || current_user.role.auditor_general?))  %>
        <li class="<%= active_class(dashboard_path) %>">
          <%= link_to dashboard_path do %>
            <span class="glyphicon glyphicon-dashboard"></span>DASHBOARD
          <% end %>
        </li>
					<% end %>
					<% if current_user.admin? %>
        <li class="<%= active_class(setups_path) %>">
          <%= link_to master_setups_path do %>
            <span class="glyphicon glyphicon-cog"></span>SETUP
          <% end %>
        </li>
				<% end %>
				<% if current_user.admin? || (!current_user.role.blank? && (current_user.role.kpi_owner? || current_user.role.municipal_manager? || current_user.role.internal_auditor? || current_user.role.auditor_general?))  %>
        <li class="<%= active_class(departmental_sdbips_path) %>">
          <%= link_to departmental_sdbips_path do %>
            <span class="glyphicon glyphicon-tasks"></span>SDBIP
          <% end %>
        </li>
        <li class="<%= active_class(departmental_sdbip_progresses_path) %>">
          <%= link_to departmental_sdbip_progresses_path do %>
            <span class="glyphicon glyphicon-book"></span>REPORTS
          <% end %>
        </li>
				<% end%>
				<% if current_user.admin? %>
        <li class="<%= active_class(users_path) %>">
          <%= link_to users_path do %>
            <span class="glyphicon glyphicon-user"></span>USERS
          <% end %>
        </li>
					<% end %>
				<li class="<%= active_class(about_path) %>">
          <%= link_to about_path do %>
            <span class="glyphicon glyphicon-info-sign"></span>ABOUT
          <% end %>
        </li>
			</ul>
			<ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Hi <%= current_user.firstname %> <span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu">
            <li class="dropdown-header"> Account </li>
            <li>
              <%= link_to current_user do %>
                <span class="glyphicon glyphicon-user"></span>Profile
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_profile_path(current_user),remote: true,'data-target' => "#user-profile-modal", 'data-toggle' => 'modal',:title=>"Click to Edit user details" do %>
                <span class="glyphicon glyphicon-cog"></span>&nbsp;Settings
              <% end %>
		            <div id="user-profile-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="editmodalLabel" aria-hidden="true">

		            </div>
            </li>
            <li class="divider"></li>
            <li>
              <%= link_to logout_path, method: "delete" do %>
                <span class="glyphicon glyphicon-log-out"></span>Log out
              <% end %>
            </li>
          </ul><!-- dropdown menu -->
        </li>
		</ul><!-- nav -->
	</section><!-- navbar -->

</header><!-- header -->
