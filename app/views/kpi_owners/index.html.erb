
<h1>Listing Kpi Owners</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kpi_owners.each do |kpi_owner| %>
      <tr>
        <td><%= kpi_owner.user_id %></td>
        <td><%= kpi_owner.title %></td>
        <td><%= link_to 'Show', kpi_owner %></td>
        <td><%= link_to 'Edit', edit_kpi_owner_path(kpi_owner) %></td>
        <td><%= link_to 'Destroy', kpi_owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

