<p id="notice"><%= notice %></p>

<h1>Listing Reporting Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reporting_categories.each do |reporting_category| %>
      <tr>
        <td><%= reporting_category.name %></td>
        <td><%= link_to 'Show', reporting_category %></td>
        <td><%= link_to 'Edit', edit_reporting_category_path(reporting_category) %></td>
        <td><%= link_to 'Destroy', reporting_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

