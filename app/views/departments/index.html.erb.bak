<% provide(:title, "Listing Departments") %>
<script>
$(function() {
	//highlight the current nav
	$("#applicationmanifest a:contains('SETUP')").parent().addClass('active');
}); //jQuery is loaded
</script>
<div>
  <h2>
    Step 2: View Departments
  </h2>
  <div class="row">
    <div class="col col-lg-12">
      <% if current_user.admin? %>
        <%= link_to new_department_path, :class =>"btn " do %>
          <span class="glyphicon glyphicon-plus-sign"></span> New Department
        <% end %>
      <% end %>
      <%= link_to lists_path, :class =>"btn  pull-right" do %>
        Step 3: List Setup <span class="glyphicon glyphicon-circle-arrow-right"></span>
      <% end %>
      <%= link_to setups_path, :class =>"btn  pull-right" do %>
        <span class="glyphicon glyphicon-circle-arrow-left"></span> Step 1: System Setup
      <% end %>
    </div>
    <div class="col col-lg-12">
      <%= will_paginate @departments, :remote=>true, :class=>"center" %>
      <table class="table table-hover">
        <thead>
          <tr>
          <th>&nbsp;</th>
            <th>Department Name</th>

            <th>Telephone Number</th>
            <th>Fax Number</th>

            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
        <% @departments.each do |department| %>
          <tr class="<%= cycle('odd', 'even') %>">
           <td><%= department.id %></td>
            <td><%= link_to department.name,department %></td>

             <td><%= link_to number_to_phone(department.tel_no, :area_code => true, :delimiter => ' ') %></td>
              <td><%= link_to number_to_phone(department.fax_no, :area_code => true, :delimiter => ' ') %></td>

           <!--<td><%= link_to department, class: "btn btn-mini" do %>
              <span class="glyphicon glyphicon-list-alt"></span>&nbsp;Show
            <% end %></td>-->
            <td>
            <% if current_user.admin? %>
            <%= link_to edit_department_path(department), class: "btn btn-mini" do %>
              <span class="glyphicon glyphicon-pencil"></span>Edit
            <% end %>
            <% end %>
            </td>
            <td>
            <% if current_user.admin? %>
            <%= link_to department, method: :delete, data: { confirm: "You sure?" }, remote: true, class: "btn btn-mini" do %>
              <span class="glyphicon glyphicon-remove-sign"></span>Delete
            <% end %>
            <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= will_paginate @departments, :remote=>true, :class=>"center" %>
    </div>
  </div>
</div>
