<div class="col-lg-6 col-lg-offset-3"><br/>
  <%= form_for(@department) do |f| %>
  <%= render 'shared/departmental_error_messages', object: @user %>
  <div class="row">
    <div class="col-lg-">
      <div class="field col-lg-">
        <%= f.label :name,"Department Name:" %>
        <%= f.text_field :name,:class=>"form-control", :autocomplete=>"off" %>
      </div>
    </div>
  </div>
    <div class="row">
      <div class="col-lg-">
        <div class="field col-lg-">
          <%= f.label :tel_no,"Department Landline no.:" %>
          <%= f.phone_field :tel_no ,:area_code => true, :delimiter => ' ',:class=>"form-control",:autocomplete=>"off" %>
        </div>
      </div>
    </div>
      <div class="row">
        <div class="col-lg-">
        <div class="field col-lg-">
          <%= f.label :fax_no,"Department Fax no.:" %>
          <%= f.phone_field :fax_no, :area_code => true, :delimiter => ' ',:class=>"form-control",:autocomplete=>"off" %>
        </div>

      </div>
    </div>

    <div class="row"><div class="col-lg-">

    <%= f.fields_for :subdepartments do |subdepartments_for_form| %>

      <%= render 'subdepartment_fields', f: subdepartments_for_form %>

  <% end %>
  <%= link_to_add_fields "Add Subdepartment", f, :subdepartments %>
</div></div>


<div class="row">
  <div class="col-lg-">
    <div class="actions col-lg-3 pull-right">
  <%= f.submit "Save", :class =>'btn btn-mini' %>
  </div>
</div>
</div>

  <% end %>
</div>
